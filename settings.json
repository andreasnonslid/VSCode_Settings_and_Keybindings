{
    // UI
    "window.autoDetectColorScheme": false,
    "window.zoomLevel": 1,
    "workbench.colorCustomizations": {
        "activityBar.background": "#2200773b",
        "editorLineNumber.activeForeground": "#00f7ff",
        "editor.background": "#2d233b",
        "editor.colorDecorators": true,
        "editor.lineHighlightBorder": "#4a4a4a",
        "editor.hoverHighlightBackground": "#4c00ff4f",
        "editor.selectionBackground": "#dbb6ff8b",
        "editor.selectionHighlightBackground": "#d85affb7",
        "editor.inactiveSelectionBackground": "#e66969",
        "editor.foreground": "#ffffff",
        "editor.selectionForeground": "#dddddd",
        "list.hoverBackground": "#000000",
        "list.hoverForeground": "#fff",
        "list.activeSelectionBackground": "#000000",
        "list.activeSelectionForeground": "#deb5ff",
        "list.errorForeground": "#ff0000", // Font color in tab when it contain errors
        "list.warningForeground": "#ffff00", // Font color in tab when it contain warnings
        "tab.activeBorder": "#00f7ff",
        "tab.activeForeground": "#fff",
        "tab.inactiveBackground": "#ff000000", // full see-through
        "tab.hoverBackground": "#000000",
        "tab.activeBackground": "#170052",
        "tab.border": "#0000005b",
        "tab.activeModifiedBorder": "#ff0000",
        "tab.unfocusedActiveBackground": "#1700526b",
        "tab.unfocusedInactiveBackground": "#ff000000",
        "titleBar.activeBackground": "#2200773b",
        "titleBar.activeForeground": "#ffffff",
        "titleBar.inactiveForeground": "#000000",
        "titleBar.inactiveBackground": "#00000000",
        "sideBar.background": "#22007717",
        "sideBar.foreground": "#fff",
        "sideBarSectionHeader.background": "#2200773b",
        "sideBarSectionHeader.foreground": "#fff",
        "statusBar.background": "#2200773b",
    },
    // VSCode niceties
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false, // inline
    "explorer.confirmDelete": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.wrapTabs": true,
    "terminal.integrated.fontFamily": "MesloLGL Nerd Font Mono", // Goated font
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": true,
    "editor.stickyTabStops": true,
    "editor.wordWrap": "on",
    "editor.fontSize": 18,
    "editor.lineHeight": 24,
    "editor.formatOnSave": true, // ctrl+k,ctrl+shift+s to circumvent
    "editor.renderWhitespace": "all",
    "editor.glyphMargin": true,
    "editor.smoothScrolling": false, // sadly very slow
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "vsicons.dontShowNewVersionMessage": true,
    "window.commandCenter": true,
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe"
        }
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "update.mode": "manual",
    // Use spaces instead of tabs for indentation.
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // Git
    "git.autofetch": false,
    "git.suggestSmartCommit": false,
    "git.openRepositoryInParentFolders": "never",
    // Cmake
    "cmake.configureOnOpen": false, // SLOW
    "cmake.autoSelectActiveFolder": false,
    "cmake.additionalCompilerSearchDirs": [
        "C:/msys64/mingw32/bin",
        "C:/msys64/clang32/bin",
        "C:/msys64/clang64/bin",
        "C:/msys64/clangarm64/bin",
        "C:/msys64/ucrt64/bin"
    ],
    // Neovim / Vim
    "vim.useCtrlKeys": false,
    "vscode-neovim.useCtrlKeysForInsertMode": false,
    "vscode-neovim.useCtrlKeysForNormalMode": false,
    "vscode-neovim.nvim-ui.nvimColorNormal": "#ffc600",
    "nvim-ui.nvimColorInsert": "#D32F2F",
    "nvim-ui.nvimColorVisual": "#673AB7",
    "nvim-ui.nvimColorReplace": "#000",
    // Python
    "notebook.lineNumbers": "on",
    "notebook.output.textLineLimit": 100,
    "[python]": {
        "editor.formatOnType": true
    },
    "jupyter.interactiveWindow.creationMode": "perFile",
    // Sonarlint
    "sonarlint.connectedMode.connections.sonarqube": [
        {
            "serverUrl": "https://code-analysis.autostoresystem.com",
            "connectionId": "https-code-analysis-autostoresystem-com"
        }
    ],
    "workbench.colorTheme": "Palenight Theme",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "cmake.configureOnEdit": false,
    "code-runner.runInTerminal": true
}
